{
  "name": "@elementfi/component-library",
  "version": "1.0.0",
  "description": "React component library for Element Finance apps",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/js/index.js",
  "module": "dist/js/index.esm.js",
  "resolutions": {
    "webpack": "^5"
  },
  "targets": {
    "js": {
      "source": "src/index.ts",
      "isLibrary": true
    },
    "css": {
      "source": "src/global.css"
    },
    "module": {
      "source": "src/index.ts"
    },
    "types": {
      "source": "src/index.ts"
    }
  },
  "types": "dist/js/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:storybook": "start-storybook -p 9001",
    "build:storybook": "build-storybook --docs",
    "prepare": "husky install",
    "build:tailwind": "npx tailwindcss build -i src/global.css -o src/tailwind.output.css",
    "lint:w": "eslint --fix '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:w": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "watch": "parcel watch",
    "build": "parcel build"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "alias": {
    "src": "./src"
  },
  "dependencies": {
    "@storybook/addon-a11y": "^6.5.10",
    "@tailwindcss/forms": "^0.5.2",
    "classnames": "^2.3.1",
    "daisyui": "^2.17.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@elementfi/eslint-config": "*",
    "@elementfi/prettier-config": "*",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.5",
    "eslint": "^7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "parcel": "^2.6.2",
    "postcss": "^8.4.14",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.4"
  }
}
