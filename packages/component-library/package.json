{
  "name": "@elementfi/component-library",
  "version": "1.0.0",
  "description": "React component library for Element Finance apps",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/js/index.js",
  "module": "dist/js/index.esm.js",
  "targets": {
    "js": {
      "source": "src/index.ts",
      "isLibrary": true
    },
    "css": {
      "source": "src/global.css"
    },
    "module": {
      "source": "src/index.ts"
    },
    "types": {
      "source": "src/index.ts"
    }
  },
  "types": "dist/js/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:tailwind": "npx tailwindcss build -i src/global.css -o src/tailwind.output.css",
    "lint:w": "eslint --fix '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:w": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "watch": "parcel watch",
    "build": "parcel build"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "alias": {
    "src": "./src"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "classnames": "^2.3.1",
    "daisyui": "^2.17.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@elementfi/eslint-config": "*",
    "@elementfi/prettier-config": "*",
    "@types/react": "^18.0.14",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "@types/react-dom": "^18.0.5",
    "eslint": "^7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "parcel": "^2.6.2",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4"
  }
}
