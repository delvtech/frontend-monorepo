{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "plugins": [
      {
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": ["src"]
}
