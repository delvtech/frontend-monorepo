{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./hardhat.config.ts"
  ]
}