{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "src/*": ["./src/*"],
      "typechain/*": ["./typechain/*"]
    }
  },
  "include": ["./src", "./typechain"],
  "files": ["./hardhat.config.ts"]
}
