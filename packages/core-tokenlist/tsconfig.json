{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "compiled/",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  // Include/Exclude is for collections or groups of files or folders, etc..
  "include": ["src/*"],
  // Specify separate files directly by their path
  "files": ["./hardhat.config.ts"]
}
