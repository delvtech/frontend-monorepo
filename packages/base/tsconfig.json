{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    // set rootDir to "." because base is not allowed to import from anywhere else
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"]
}
